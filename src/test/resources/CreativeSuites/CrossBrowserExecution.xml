        <classes>
            <class name="com.demoblaze.automation.login.LogoutFunctionality"></class>
        </classes>
    </test>

    <test name="Parallel Test on Edge">
        <parameter name="Browser" value="edge"></parameter>
        <classes>
            <class name="com.demoblaze.automation.login.LogoutFunctionality"></class>
        </classes>
    </test>

    <test name="Parallel Test on Safari">
        <parameter name="Browser" value="safari"></parameter>
        <classes>
            <class name="com.demoblaze.automation.login.LogoutFunctionality"></class>
        </classes>
    </test>

</suite>